<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/text_margin"
        >
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5sp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teachername"
                    android:text="Vikram Kumar"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/title_size"
                    android:textStyle="normal"
                    >

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherpost"
                    android:text="Professor"
                    android:textSize="@dimen/title_size"
                    android:textStyle="normal"
                    >

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacheremail"
                    android:text="vickyprajapati0951@gmail.com"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    android:layout_weight="0.5"

                    >

                </TextView>

                <TextView
                    android:id="@+id/teachernumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="8769788575"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/title_size"
                    android:textStyle="normal"

                    >

                </TextView>

                <TextView
                    android:id="@+id/teacherqualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="B.Tech"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/title_size"
                    android:textStyle="normal"

                    >

                </TextView>




            </LinearLayout>




        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacherimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:layout_marginVertical="@dimen/text_margin"
            android:layout_gravity="center_vertical"
            android:src="@drawable/teacher">

        </de.hdodenhof.circleimageview.CircleImageView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>